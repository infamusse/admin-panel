{
  "name": "fer-07-project",
  "version": "1.0.0",
  "description": "",
  "main": "index.html",
  "scripts": {
    "init-project": "npm install && npm-run-all init:*",
    "init:dirs": "mkdirp docs src/sass src/css src/vendor src/images src/js",
    "init:files": "touch README.md src/index.html src/sass/style.scss src/js/script.js",
    "init:gitignore": "curl https://raw.githubusercontent.com/github/gitignore/master/Node.gitignore -o .gitignore",
    "init:gitignore:custom": "echo \"docs\" >> .gitignore",
    "test": "npm-run-all test:*",
    "test:js": "eslint src/js/",
    "build": "npm-run-all build:* ",
    "build:clean": "mkdirp docs && rm -r docs && mkdirp docs",
    "build:copy": "copyfiles -a -u 1 -e \"**/sass/**/*\" -e \"**/.gitkeep\" \"src/**/*\" docs",
    "build:sass": "node-sass --output-style compact -o docs/css src/sass",
    "build:autoprefixer": "globstar autoprefixer-cli \"docs/css/*.css\"",
    "build-dev": "npm-run-all build-dev:sass build:autoprefixer",
    "build-dev:sass": "node-sass --output-style expanded --source-map true -o docs/css src/sass",
    "server": "json-server --port 3131 --no-cors --delay 250 --watch docs/db/app.json",
    "watch": "npm-run-all build build-dev -p watch:* server",
    "watch:browsersync": "browser-sync start --server docs --files \"docs/**/*\" --ignore \"docs/db/**/*\"",
    "watch:sassprefixer": "onchange \"src/sass/**/*.scss\" -- npm run build-dev",
    "watch:copy": "onchange -e \"**/sass/**/*\" -e \"**/.gitkeep\" \"src/**/*\" -- copyfiles -a -u 1 {{changed}} docs"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "flatpickr": "^4.6.3",
    "js-datepicker": "^5.2.1",
    "json-server": "^0.14.2",
    "normalize.css": "^8.0.1"
  },
  "devDependencies": {
    "autoprefixer-cli": "^1.0.0",
    "browser-sync": "^2.26.3",
    "copyfiles": "^2.1.0",
    "eslint": "^5.14.1",
    "globstar": "^1.0.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^7.0.0",
    "npm-run-all": "^4.1.5",
    "nu-html-checker": "^0.1.0",
    "onchange": "^5.2.0",
    "stylelint": "^9.10.1",
    "stylelint-scss": "^3.5.4"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "endOfLine": "lf"
  }
}
